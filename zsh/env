#
# Setup environment
#

umask 0077

# Path to your oh-my-zsh configuration.
export ZSH=$HOME/.oh-my-zsh

ZSH_THEME="agnoster"
CASE_SENSITIVE="true"
DISABLE_AUTO_UPDATE="true"
export UPDATE_ZSH_DAYS=13
DISABLE_LS_COLORS="false"
DISABLE_AUTO_TITLE="true"
DISABLE_CORRECTION="true"
DISABLE_UNTRACKED_FILES_DIRTY="true"
REPORTTIME=10
TERM=xterm-256color

export LANG="en_US.UTF-8"
export GREP_OPTIONS="--color=auto --exclude=\*.svn\* --exclude=\*.git\*"

# Set my git editor
export GIT_EDITOR='vim -f'
export VIM_APP_DIR='/usr/bin/vim'

# Get helpful ruby warnings when calling scripts
#export RUBYOPT="w"

# Which plugins would you like to load? (plugins can be found in ~/.oh-my-zsh/plugins/*)
# Custom plugins may be added to ~/.oh-my-zsh/custom/plugins/
plugins=(brew git-extras gitfast gradle jira knife redis-cli rvm tmux vagrant)

source $ZSH/oh-my-zsh.sh
